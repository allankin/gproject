<resources>
    
    <style name="TxlPadding">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    
    <style name="txl_list">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:divider">@color/list_divider_color</item>
        <item name="android:dividerHeight">0.1dp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>
    
    
    
    <style name="TxlActivityTheme">
	    <item name="android:windowBackground">@color/white</item>
	    <item name="android:background">#FFFFFF</item>
	</style>

    <style name="dial_liner">
        <item name="android:orientation">horizontal</item> 
        <item name="android:layout_width">fill_parent</item> 
        <item name="android:layout_height">wrap_content</item> 
    </style>
    
    <style name="dial_grid_btn">
        <item name="android:layout_weight">1</item> 
        <item name="android:layout_width">0dp</item> 
        <item name="android:layout_height">fill_parent</item> 
    </style>    
    
    <style name="Txl.Skin.Widget.Spinner" parent="android:Widget">
	     <item name="android:background">@drawable/select_dropdown</item>
	     <item name="android:clickable">true</item>
	</style>
	
    <style name="Txl_Skin_Widget_Header_Spinner">
	     <item name="android:background">@drawable/header_select_dropdown</item>
	     <item name="android:clickable">true</item>
	</style>
    
    <style name="Txl.Skin.Default" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/white</item>
        
        <item name="key0">@drawable/keyboard_0</item>
        <item name="key1">@drawable/keyboard_1</item>
        <item name="key2">@drawable/keyboard_2</item>
        <item name="key3">@drawable/keyboard_3</item>
        <item name="key4">@drawable/keyboard_4</item>
        <item name="key5">@drawable/keyboard_5</item>
        <item name="key6">@drawable/keyboard_6</item>
        <item name="key7">@drawable/keyboard_7</item>
        <item name="key8">@drawable/keyboard_8</item>
        <item name="key9">@drawable/keyboard_9</item>
        <item name="key_bg">@drawable/key_bg_s</item>
        <item name="key_star">@drawable/keyboard_star</item>
        <item name="key_hash">@drawable/keyboard_hash</item>
        
    </style>
    
    <style name="activity_background">
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/opaque</item>
    </style>
    
    <style name="contact_action_liner">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item> 
        <item name="android:gravity">left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="contact_company_user_detail_column_1">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.1</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="contact_company_user_detail_column_2">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="setting_column1">
        <item name="android:gravity">left</item> 
        <item name="android:layout_marginRight">1px</item>
    	<item name="android:layout_height">40dp</item>
    	<item name="android:layout_weight">1</item>
    	<item name="android:layout_marginBottom">1px</item>
    	<item name="android:textColor">#333333</item>
    	<item name="android:layout_width">0dip</item>
    </style>
    
    <style name="setting_column2">
        <item name="android:gravity">center_vertical|left</item> 
    	<item name="android:layout_height">40dp</item>
    	<item name="android:layout_weight">7</item>
    	<item name="android:textColor">#333333</item>
    	<item name="android:layout_width">0dip</item>
    </style>
    
    <style name="setting_column3">
        <item name="android:gravity">center_vertical|right</item>
    	<item name="android:layout_height">40dp</item>
    	<item name="android:layout_weight">1</item>
    	<item name="android:textColor">#333333</item>
    	<item name="android:layout_width">0dip</item>
    </style>
    
    <style name="txl_pushmessage_detail_word_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/listview_item_text_color</item>
    </style>
    
    
    <style name="txl_header_word_style">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="txl_header_layout_style">
    	<item name="android:layout_height">54dp</item>
        <item name="android:background">@drawable/nav_bar_bg</item>
    </style>
    
    <style name="txl_commdir_type_radio_style">
	   <item name="android:layout_width">80dp</item>
	   <item name="android:gravity">center</item>
	   <item name="android:button">@null</item>
	   <item name="android:background">@drawable/commdir_type_radio_item</item>
	</style>
	
	<style name="Theme.Start" parent="android:Theme">  
		<item name="android:windowBackground">@drawable/start_page</item>  
		<item name="android:windowNoTitle">true</item>  
	</style>
	
    <style name="dialog" parent="@android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowIsTranslucent">false</item>  
        <item name="android:windowNoTitle">false</item>  
        <item name="android:background">@android:color/transparent</item>  
        <item name="android:windowBackground">@android:color/background_dark</item>  
        <item name="android:backgroundDimEnabled">false</item>  
    </style> 
    
</resources>