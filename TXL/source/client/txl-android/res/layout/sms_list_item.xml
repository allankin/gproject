<?xml version="1.0" encoding="utf-8"?>  
  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent" android:layout_height="40dip">  
    <!-- <ImageView android:id="@+id/contact_photo"  
        android:layout_width="40dip" android:layout_height="40dip" />  --> 
    <TextView android:id="@+id/sms_name"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"  
        android:layout_alignParentLeft="true" 
        android:singleLine="true"  
        android:textSize="@dimen/list_item_normal_text_size"  
        android:textIsSelectable="true"
        android:text="刘先生"
        android:textColor="@color/listview_item_text_color"
        />  

   
    <TextView
        android:id="@+id/sms_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sms_name"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/sms_name"
        android:textSize="@dimen/list_item_small_text_size" 
        android:textIsSelectable="true"
        android:text="(23)"
        android:textColor="@color/listview_item_text_gray_color"
        />
    <TextView
        android:id="@+id/sms_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/sms_name"
        android:text="4/2 21:30"
        android:textIsSelectable="true"
        android:textColor="@color/listview_item_text_gray_color"
        android:textSize="@dimen/list_item_small_text_size" />
     
	<!-- ??? 不解，为何需要：android:layout_marginTop="20dp"  -->       
     <TextView android:id="@+id/sms_body"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"  
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:singleLine="true"  
        android:textSize="@dimen/list_item_small_text_size" 
        android:textIsSelectable="true"
        android:text="" 
        android:textColor="@color/listview_item_text_gray_color"
        />
    
</RelativeLayout>  