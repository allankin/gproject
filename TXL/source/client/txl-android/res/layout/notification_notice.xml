<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/notification_notice"
    android:background="@drawable/notice_font_bg"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    >
	<ImageView android:id="@+id/noticeImage"  
	    android:src="@drawable/ic_launcher"  
	    android:layout_width="30dp" 
	    android:layout_height="30dp" 
	    android:layout_alignParentTop="true"/>
	<TextView 
	     android:id="@+id/notification_title"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:textColor="@color/black"
	     android:textSize="18sp"
	     android:text="单位通信录最新消息"
	     android:layout_alignLeft="@id/noticeImage" 
	     android:layout_marginLeft="30dp"
	    />
	<TextView 
	     android:id="@+id/notification_datetime"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:text="20:30"
	     android:layout_alignParentRight="true"
	     android:gravity="right"
	     android:textColor="@color/black"
	    />
    <TextView
        android:id="@+id/notification_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_title"
        android:layout_alignLeft="@id/noticeImage" 
		android:layout_marginLeft="30dp"
		android:textColor="@color/black"
        />
