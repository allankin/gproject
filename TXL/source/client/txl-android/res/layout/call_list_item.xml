<?xml version="1.0" encoding="utf-8"?>  
  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent" android:layout_height="40dip">  
    <!-- <ImageView android:id="@+id/contact_photo"  
        android:layout_width="40dip" android:layout_height="40dip" />  --> 
    <TextView android:id="@+id/call_name"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"  
        android:layout_alignParentLeft="true" 
        android:singleLine="true"  
        android:textSize="15sp"  
        android:textIsSelectable="true"
        android:text="刘先生"
        />  

    <TextView
        android:id="@+id/call_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/call_name"
        android:layout_alignBottom="@id/call_name"
        android:singleLine="true"
        android:textSize="20sp" 
        android:textIsSelectable="true"
        android:text="057534234567"
        />
    
    <TextView
        android:id="@+id/call_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:text="4/2 21:30"
        android:textIsSelectable="true"
        android:textSize="20sp" />
     
     <Button
	            android:id="@+id/call_statusBtn"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:text="X"
	            android:layout_alignParentRight="true"
	            />
     
     <TextView android:id="@+id/call_count"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"  
        android:layout_toLeftOf="@id/call_statusBtn"  
        android:layout_centerVertical="true"
        android:singleLine="true"  
        android:textSize="20sp" 
        android:textIsSelectable="true"
        android:text="5" 
        />
    
</RelativeLayout>  