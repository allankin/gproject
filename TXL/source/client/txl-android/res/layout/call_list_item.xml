<?xml version="1.0" encoding="utf-8"?>  
  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent" android:layout_height="wrap_content" 
    android:descendantFocusability="blocksDescendants">  
    <!-- <ImageView android:id="@+id/contact_photo"  
        android:layout_width="40dip" android:layout_height="40dip" />  --> 
    <TextView android:id="@+id/call_name"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"  
        android:layout_alignParentLeft="true" 
        android:singleLine="true"  
        android:textSize="15sp"  
        android:textIsSelectable="true"
        android:text="刘先生"
        android:textColor="@color/listview_item_text_color"
        />  

    <TextView
        android:id="@+id/call_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/call_name"
        android:layout_alignBottom="@id/call_name"
        android:singleLine="true"
        android:textSize="15sp" 
        android:textIsSelectable="true"
        android:text="057534234567"
        android:textColor="@color/listview_item_text_gray_color"
        />
    
    <TextView
        android:id="@+id/call_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:text="4/2 21:30"
        android:textIsSelectable="true"
        android:textColor="@color/listview_item_text_gray_color"
        android:textSize="13sp" />
     
     <Button
	            android:id="@+id/call_statusBtn"
	            android:layout_width="21.3dp"
	            android:layout_height="21.3dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            />
     
     <TextView android:id="@+id/call_count"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"  
        android:layout_toLeftOf="@id/call_statusBtn"  
        android:layout_centerVertical="true"
        android:singleLine="true"  
        android:textSize="15sp" 
        android:textIsSelectable="true"
        android:text="5" 
        android:textColor="@color/listview_item_text_gray_color"
        />
    
</RelativeLayout>  