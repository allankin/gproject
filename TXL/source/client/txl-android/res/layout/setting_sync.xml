<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:id="@+id/setting_layout"
    android:background="@color/activity_background_color"
    >
    <include layout="@layout/header" />
    
    <ScrollView
        android:id="@+id/setting_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout  
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical" 
		    >
        <TableLayout
            android:id="@+id/setting_sync_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            
            <TableRow
                android:id="@+id/setting_sync_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <ImageView style="@style/setting_column1"   android:src="@drawable/setting_icon_sms_restore" android:layout_height="wrap_content" android:layout_width="wrap_content" />
                
                <TextView
                    style="@style/setting_column2"
                    android:id="@+id/setting_login_label"
                    android:text="@string/setting_sync_company" />
                <LinearLayout style="@style/setting_column3" android:layout_marginRight="15dp">
					<ToggleButton
					   android:id="@+id/setting_sync_company_comdir_toggle"
					   android:layout_width="wrap_content"
					   android:layout_height="wrap_content"
					   android:background="@drawable/switch_bg"
					   android:textOn=""
                		android:textOff="" />
				</LinearLayout>
                 
                
            </TableRow>
            
            
            <TableRow
                android:id="@+id/setting_sync_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <ImageView style="@style/setting_column1"   android:src="@drawable/setting_icon_sms_restore" android:layout_height="wrap_content" android:layout_width="wrap_content" />
                
                <TextView
                    style="@style/setting_column2"
                    android:id="@+id/setting_login_label"
                    android:text="@string/setting_sync_share" />
                
				<LinearLayout style="@style/setting_column3" android:layout_marginRight="15dp">
					<ToggleButton
					   android:id="@+id/setting_sync_share_commdir_toggle"
					   android:layout_width="wrap_content"
					   android:layout_height="wrap_content"
					   android:background="@drawable/switch_bg"
					   android:textOn=""
                		android:textOff="" />
				</LinearLayout>
                
            </TableRow>
            
            <TableRow
                android:id="@+id/setting_sync_share_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                
            
            </TableRow>
            
     	 </TableLayout>
     	 
        		<TableLayout
		            android:id="@+id/setting_sync_share_item_table"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            >
                    
		        </TableLayout>
     	 </LinearLayout>
	</ScrollView>
</LinearLayout>